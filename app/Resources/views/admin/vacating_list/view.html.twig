{% include 'admin/header.html.twig' with {'title': 'Vacating Users Information','extra_css':''}  %}
<body>
<body>
<div id="pcoded" class="pcoded">
  <div class="pcoded-overlay-box"></div>
  <div class="pcoded-container navbar-wrapper"> {% include 'admin/inner_header.html.twig' %} 
    <!-- Sidebar inner chat start-->
    
    <div class="pcoded-main-container">
      <div class="pcoded-wrapper">
        <nav class="pcoded-navbar"> {% include 'admin/sidebar.html.twig' %} </nav>
        <div class="pcoded-content">
          <div class="pcoded-inner-content"> 
            <!-- Main-body start -->
            <div class="main-body">
              <div class="page-wrapper"> 
                <!-- Page-header start -->
                <div class="page-header">
                  <div class="row align-items-end">
                    <div class="col-lg-8">
                      <div class="page-header-title">
                        <div class="d-inline">
                          <h4>Vacating Users</h4>
                        </div>
                      </div>
                    </div>
                    <div class="col-lg-4">
                      <div class="page-header-breadcrumb">
                        <ul class="breadcrumb-title">
                          <li class="breadcrumb-item"> <a href="{{ url('admin_dashboard')}}"> <i class="feather icon-home"></i> </a> </li>
                          <li class="breadcrumb-item"><a href="#!">Vacating Users</a> </li>
                          <li class="breadcrumb-item"><a href="#!">Information</a> </li>
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- Page-header end --> 
                <!-- Page body start -->
                <div class="page-body">
                  <div class="row">
                    <div class="col-sm-12">
                      <div class="card">
                        <div class="card-header"> {% for type, messages in app.session.flashbag.all() %}
                          {% for message in messages %}
                          <div class="flash-{{type}}">{{message}}</div>
                          {% endfor %}
                          {% endfor %}
                          
                          {{ form_start(form, {
                      		  'attr': {'id': 'search-form'},
                      		  'action': path('admin_users_vacating'), 'method': 'POST','autocomplete':'off'}
                              )
               			   }}    
                           <div class="row"><div class="col-md-4"> {{ form_row(form.property_dropdown, {'attr': {'value': "#{ search_property_by }"}}) }} </div><div class="col-md-4">{{ form_row(form.vacatingdate_sorting, {'attr': {'value': "#{ search_vacating_by }"}}) }} </div><div class="col-md-4">{{ form_row(form.Search) }}</div></div>
                           
                            {{ form_end(form) }}  
                          
                          </div>
                        <div class="card-block">
                          <div class="dt-responsive table-responsive">
                            <table  class="table table-striped table-bordered nowrap">
                              <thead>
                                <tr>
                                  <th>Name</th>
                                  <th>Phone</th>
                                  <th>Email</th>
                                  <th>Property</th>
                                  <th>Reason</th>
                                  <th>Vacating Date</th>                                  
                                  <th>Entry time</th>                                                                 
                                </tr>                              
                                </thead>
                                <tbody>
                                {% for allvacating in all_vacating %}
                              <tr>
                                <td>{{ allvacating.CustomerName }}</td>
                                <td>{{ allvacating.CustomerMobile }}</td>                                
                                <td>{{ allvacating.CustomerEmail }}</td>     
                                <td>{{ allvacating.PropertyName }}</td>     
                                <td>{{ allvacating.getVacatingReason }}</td> 
                                <td>{{ allvacating.getVacatingEndDate|date('d M, Y') }} </td>                         
                                <td>{{ allvacating.getEntryTime|date('d M, Y h:i A') }} </td>                               
                              </tr>
                              {% endfor %}  
                              </tbody>                            
                            </table>
                            <center>
                              {{ include('pagination.html.twig') }}
                           </center>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
                <!-- Page body end --> 
              </div>
            </div>
            <!-- Main-body end --> 
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/underscore.js/1.8.3/underscore-min.js"></script> 
{% include 'admin/footer.html.twig' with {'extra_js':''} %} 