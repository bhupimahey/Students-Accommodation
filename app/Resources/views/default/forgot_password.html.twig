{% include 'admin/header.html.twig' with {'title': 'Forgot Password','extra_css':''}  %}
<body>
 <div id="pcoded" class="pcoded load-height">
        <!-- Menu header end -->
    <section class="login-block">
            <!-- Container-fluid starts -->

            <div class="container-fluid">
                <div class="row">
                    <div class="col-sm-12">
                        <!-- Authentication card start -->
                       	{{ form_start(form, {
                        'attr': {'id': 'forgot_password-form'},
                        'action': path('forgot_password'), 'method': 'POST'}
                        )
                }}
                  		
                            <div class="auth-box card">
                            
                                <div class="card-block">
                                    <div class="row m-b-20">
                                    
                                        <div class="col-md-12">
                                            <h3 class="text-center"><img src="{{ asset('assets/images/Logo.png') }}" style="width:50%;"></h3>
                                            {% for type, messages in app.session.flashbag.all() %}
    		{% for message in messages %}
      		      <div class="flash-{{type}}">{{message}}</div>      		  
    		{% endfor %}
		{% endfor %}
                                        </div>
                                        
                                    </div>
                                    <div class="form-group form-primary">
                                    {{ form_row(form.account_username, {'label':false}) }} 
                                        
                                        <span class="form-bar"></span>
                                    </div>
                                    
                                   
                                    <div class="row m-t-30">
                                       <div class="col-md-6">
                                        
                                        {{ form_row(form.Submit) }}
                                            
                                        </div>
                                    
                                        <div class="col-md-6">
                                        
                                        <a href="{{ url('view_login') }}" class="btn btn-primary btn-md btn-block waves-effect waves-light text-center m-b-20">Login</a>
                                            
                                        </div>
                                       
                                    </div>
                                    
                                    
                                </div>
                            </div>
                        {{ form_end(form) }}
                        <!-- Authentication card end -->
                    </div>
                    <!-- end of col-sm-12 -->
                </div>
                <!-- end of row -->
            </div>
            <!-- end of container-fluid -->
        </section>
    </div>
{% include 'admin/footer.html.twig' with {'extra_js':''} %}  